<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon"
        android:scaleType="centerCrop" />
<TextView
    android:id="@+id/te1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Unblast"
    android:textSize="32sp"
    android:textFontWeight="@integer/material_motion_duration_long_2"
    app:layout_constraintStart_toEndOf="@id/imageView"
    android:layout_marginLeft="20dp"></TextView>

<TextView
    android:id="@+id/hrs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2 hrs"
    android:layout_margin="2dp"
    app:layout_constraintTop_toBottomOf="@id/te1"
    app:layout_constraintStart_toStartOf="@id/te1"></TextView>

    <TextView
        android:id="@+id/all_te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buckle up, because change is coming to word press "
        android:textSize="32sp"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_margin="12dp"></TextView>

    <ImageView

        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        app:layout_constraintTop_toBottomOf="@id/all_te"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/like"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/love"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/image2"
        app:layout_constraintStart_toEndOf="@id/like"
        app:layout_constraintEnd_toStartOf="@id/share" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/share"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comment"
        app:layout_constraintTop_toBottomOf="@id/image2" />


</androidx.constraintlayout.widget.ConstraintLayout>